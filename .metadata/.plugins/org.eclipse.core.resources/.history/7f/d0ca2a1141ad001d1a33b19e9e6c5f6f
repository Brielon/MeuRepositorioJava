package classe;

public class DataTeste {
public static void main(String[] args) {
	Data data1 = new Data();
	Data data2 = new Data();
	data1.dia = 11;
	data1.mes = "marco";
	data1.ano = 2011;
	data2.dia = 20;
	data2.mes = "novembro";
	data2.ano = 2000;
	String data_1 = String.format("%d de %s de %d",data1.dia,data1.mes, data1.ano);
	String data_2 = String.format("%d de %s de %d",data2.dia,data2.mes, data2.ano);
	System.out.println(data_1);
	System.out.println(data_2);
	System.out.println(data1);
	System.out.println(data2);
}
}
